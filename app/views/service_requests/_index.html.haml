.row
  .col-md-12
    .box
      %p#notice= notice
      .box-header.with-border 
        / %h3 Listing Service Requests
        / = link_to 'New Service Request', new_customers_service_request_path, class: 'btn bg-purple'
      .box-body
        %table.table.table-bordered
          %thead
            %tr
              %th 單號
              %th 客戶名稱
              %th 標題
              %th 客訴種類
              %th 期限
              %th 狀態
              %th 指派人員數
              %th 留言回覆數
              %th 操作
          %tbody
            - service_requests.each do |sr|
              %tr
                %td= sr.id[0..7]
                %td= sr.customer.username
                %td= sr.title
                %td= sr.category.title
                %td= sr.deadline
                %td= sr.state
                %td= sr.assignments.blank? ? '未指派人員' : sr.assignments.count
                %td= sr.comments.blank? ? '無留言' : "#{sr.comments.count} 則"
                %td
                  = link_to '查看細節', [role, sr]
                  - if current_user.customer?
                    = link_to '修改', edit_customer_service_request_path(sr)