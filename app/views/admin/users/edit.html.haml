.row
  .col-md-6.col-md-offset-3
    %h1.text-center= t('edit_user')
    %hr
    = simple_form_for [:admin, @user] do |f|
      .row
        - if @user.customer?
          .col-md-6= f.input :customer_number, input_html: {class: 'form-control'}
        - else
          .col-md-6= f.input :staff_number, input_html: {class: 'form-control'}, required: true
      .row
        .col-md-6= f.input :username, input_html: {class: 'form-control'}, required: true
      .row
        .col-md-6= f.input :email, as: :email, input_html: {class: 'form-control'}, required: true
      .row
        .col-md-6= f.input :password, input_html: {class: 'form-control'}
      .row
        .col-md-12= f.button :submit, t('edit'), data: { disable_with: t('please_wait') }
    %hr
    / = link_to t('cancle'), root_path, class: 'btn btn-default'