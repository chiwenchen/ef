.row
  .col-md-12
    .box
      .box-header.with-border 
        %strong= t('admin_list')
      .box-body
        %table.table.table-bordered
          %thead
            %tr
              %th= t('staff_number')
              %th= t('name')
              %th= t('register_date')
          %tbody
            - @admins.each do |admin|
              %tr
                %td= admin.staff_number
                %td= link_to admin.username, edit_admin_user_path(admin)
                %td= admin.created_at.to_s(:simple_date)
%p= paginate @admins
%p= "共 #{(@admins and @admins.size) || 0} 位管理員"
