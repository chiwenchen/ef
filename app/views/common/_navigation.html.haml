.main-header
  .logo= t('service_system')
  %nav.navbar.navbar-fixed-top(role='navigation')
    %a.sidebar-toggle(href='#' data-toggle='offcanvas' role='button')
    .collapse.navbar-collapse.navbar-custom-menu
      %span.sr-only Toggle navigation
      %ul.nav.navbar-nav
        - if I18n.locale != :'zh-TW'
          %li= link_to '切換至中文', set_locale_home_index_path(locale: 'zh-TW')
        - if I18n.locale != :en
          %li= link_to 'Switch to English', set_locale_home_index_path(locale: :en)
        - if user_signed_in?
          %li.dropdown
            %a.dropdown-toggle(href="#" data-toggle="dropdown" role="button" aria-expanded="false")
              = current_user.username
              %span.caret
            %ul.dropdown-menu.pull-right(role="menu")
              %li= link_to t('sign_out'), destroy_user_session_path, method: 'DELETE'