.main-header
  .logo Service System
  %nav.navbar.navbar-fixed-top(role='navigation')
    %a.sidebar-toggle(href='#' data-toggle='offcanvas' role='button')
    .collapse.navbar-collapse.navbar-custom-menu
      %span.sr-only Toggle navigation
      %ul.nav.navbar-nav
        / - if current_user and current_user.admin?
        - if !user_signed_in?
          %li= link_to '登入', new_user_session_path
          %li= link_to '註冊', new_user_registration_path
        - if user_signed_in?
          - if current_user.sales? || current_user.tech?
            %li= link_to '員工後台', '#'
          %li.dropdown
            %a.dropdown-toggle(href="#" data-toggle="dropdown" role="button" aria-expanded="false")
              = current_user.username
              %span.caret
            %ul.dropdown-menu.pull-right(role="menu")
              %li= link_to '登出', destroy_user_session_path, method: 'DELETE'