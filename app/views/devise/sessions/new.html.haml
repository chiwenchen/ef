.row
  .col-sm-4.col-sm-offset-4
    %h1.text-center= t('sign_in')
    %hr/
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .form-group
        = f.text_field :username, autofocus: true, placeholder: t('username'), class: 'form-control'
      .form-group
        = f.password_field :password, autocomplete: "off", placeholder: t('password'), class: 'form-control'
      / - if devise_mapping.rememberable?
      /   .form-group
      /     = f.check_box :remember_me
      /     = f.label :remember_me
      .form-group
        = f.submit t('sign_in'), class: "btn btn-primary btn-block btn-lg"
    .text-center
      - if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
        = link_to "Forgot your password?", new_password_path(resource_name)
